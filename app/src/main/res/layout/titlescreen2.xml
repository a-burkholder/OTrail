<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenutitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/title1"
        android:layout_width="301dp"
        android:layout_height="120dp"
        android:layout_marginStart="420dp"
        android:layout_marginTop="52dp"
        android:text="Travel the trail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title6"
        android:layout_width="301dp"
        android:layout_height="35dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="8dp"
        android:text="Management"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title4"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_marginStart="420dp"
        android:layout_marginTop="268dp"
        android:text="See top 10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title2"
        android:layout_width="301dp"
        android:layout_height="40dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="8dp"
        android:text="Learn about the trail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title3"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="8dp"
        android:text="Learn about Hattie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="8dp"
        android:text="visit graveyard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hattiesmall"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/mainmenutitlesmallerone"
        android:layout_width="361dp"
        android:layout_height="47dp"
        android:text="Hattie's Oregon Trail (main menu)"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>