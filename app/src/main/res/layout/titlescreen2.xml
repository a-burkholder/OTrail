<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="902dp"
        android:layout_height="674dp"
        android:elevation="-5dp"
        android:foregroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601"
        app:srcCompat="@drawable/otrailmainmenu" />

    <Button
        android:id="@+id/title3"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="84dp"
        android:text="Learn about Hattie Campbell"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/title1"
        app:layout_constraintTop_toBottomOf="@+id/title1" />

    <Button
        android:id="@+id/title6"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Options"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/title5"
        app:layout_constraintTop_toBottomOf="@+id/title3" />

    <Button
        android:id="@+id/title5"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:foregroundTint="#CC000000"
        android:text="Graveyard"

        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/title3"
        app:layout_constraintTop_toBottomOf="@+id/title3"
        app:rippleColor="#B503313E" />

    <Button
        android:id="@+id/title1"
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:autoText="false"
        android:capitalize="words"
        android:text="Travel The Trail"
        android:textSize="24sp"
        android:typeface="serif"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#CC8E1D1D"
        tools:background="#CC000000" />

    <Button
        android:id="@+id/title2"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="Learn about the trail"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/title3"
        app:layout_constraintStart_toStartOf="@+id/title1"
        app:layout_constraintTop_toBottomOf="@+id/title1" />

</androidx.constraintlayout.widget.ConstraintLayout>