<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1143dp"
        android:layout_height="620dp"
        android:background="#000000"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:srcCompat="@drawable/FortLaramie"
        tools:layout_editor_absoluteX="-126dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="282dp"
        android:layout_height="53dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="344dp"
        android:layout_marginBottom="192dp"
        android:background="#AA7527"
        android:text="Welcome to Fort Laramie!"
        android:textColor="#471403"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="412dp"
        android:layout_height="149dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="#E1B677"
        android:text="Welcome to Fort Laramie! Fort Laramie was established in 1834 originally as a private fur trading fort. However, it is currently growing very rapidly into one of the largest and best-known military forts across the Northern Plains. Prices for goods here are known to be very reasonable, so take a look at the shop! "
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>