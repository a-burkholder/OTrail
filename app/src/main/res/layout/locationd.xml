<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="1449dp"
        android:layout_height="750dp"
        app:srcCompat="@drawable/img"
        tools:layout_editor_absoluteX="-150dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="458dp"
        android:layout_height="84dp"
        android:background="#00BFB4B4"
        android:backgroundTint="#B5ABAB"
        android:text="Welcome to Fort Kearney!"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="748dp"
        android:layout_height="326dp"
        app:srcCompat="@drawable/img_4"
        tools:layout_editor_absoluteX="-222dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="233dp"
        android:layout_height="435dp"
        android:text="Fort Kearney is a military fort currently being built for the purpose of aiding travelers like yourself on the Oregon Trail. Once competed it will be known as the ‘Ultimate Rest Stop’ for travelers. In order for the Fort to be successful the fort must sell a large amount of goods to the travelers passing by. In order to do this, the fort sells goods at very affordable prices, therefore it is greatly encouraged to stop buy the shop at this fort."
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/Continue1"
        android:layout_width="206dp"
        android:layout_height="55dp"
        android:backgroundTint="#C65C16"
        android:text="Continue On The Trail"
        tools:layout_editor_absoluteX="657dp"
        tools:layout_editor_absoluteY="29dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
